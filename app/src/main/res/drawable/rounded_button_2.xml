<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" android:padding="10dp">
    <solid android:color="@color/colorAccent"/> <!-- this one is ths color of the Rounded Button -->
    <corners
        android:bottomRightRadius="20dp"
        android:bottomLeftRadius="20dp"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"/>

    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Button Focused-->
        <item android:drawable="@drawable/btn_primary_pressed" android:state_focused="true" android:state_pressed="false" ></item>
        <!-- Button Focused Pressed-->
        <item android:drawable="@drawable/btn_primary_pressed" android:state_focused="true" android:state_pressed="true"></item>
        <!-- Button Pressed-->
        <item android:drawable="@drawable/btn_primary_pressed" android:state_focused="false" android:state_pressed="true" />
        <!-- Button Default Image-->
        <item android:drawable="@drawable/btn_primary" />

    </selector>

</shape>